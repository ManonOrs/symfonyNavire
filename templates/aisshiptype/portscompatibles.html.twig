{% extends "base.html.twig" %}
{% block body %}
        <h2>Ports compatibles: </h2>
    <h3>Type de navire: {{ type.id }} - {{ type.libelle }}</h3>
    <div class="length: 50%!important">    
    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Indicatif</th>
      <th scope="col">Nom</th>
      <th scope="col">Pays</th>
      <th scope="col">Voir</th>
    </tr>
  </thead>
  <tbody>
    {% for port in ports %}
    <tr class="table-primary">
      <td>{{ port.indicatif }}</td>
      <td>{{ port.nom }}</td> 
      <td>{{ port.lePays.nom }}</td>
      <td><a href="#">voir les ports du pays</a> </td>
     
    </tr>
    {% endfor %}
      </tbody>
</table>
    </div>
{% endblock %}